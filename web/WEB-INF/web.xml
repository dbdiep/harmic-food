    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>org.coolstyles.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>org.coolstyles.OrderServlet</servlet-class>
    </servlet>
    <servlet>
