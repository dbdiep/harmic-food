    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>org.coolstyles.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetail</servlet-name>
        <servlet-class>org.coolstyles.ProductDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>org.coolstyles.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>org.coolstyles.CategoryServlet</servlet-class>
    </servlet>
